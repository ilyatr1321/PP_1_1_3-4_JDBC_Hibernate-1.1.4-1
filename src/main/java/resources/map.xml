<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>


    <class name="jm.task.core.jdbc.model.User" table="users" schema="mydbtest">
        <id name="id">
            <column name="id" sql-type="long(11) AUTO_INCREMENT"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="lastName">
            <column name="lastName" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="age">
            <column name="age" sql-type="byte"/>
        </property>
    </class>

</hibernate-mapping>